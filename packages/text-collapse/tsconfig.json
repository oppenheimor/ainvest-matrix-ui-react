{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types/",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
